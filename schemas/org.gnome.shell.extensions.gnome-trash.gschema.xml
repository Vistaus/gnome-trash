<?xml version="1.0" encoding="UTF-8"?>
<schemalist gettext-domain="gnome-trash">
  <schema id="org.gnome.shell.extensions.gnome-trash" path="/org/gnome/shell/extensions/gnome-trash/">
    <!-- See also: https://developer.gnome.org/glib/stable/gvariant-format-strings.html -->

    <key type="u" name="trash-sort">
      <default>0</default>
      <summary>Sort trash by</summary>
    </key>

    <key type="u" name="activation">
      <default>1</default>
      <summary>On activation</summary>
    </key>

    <key type="b" name="hide-button">
      <default>false</default>
      <summary>Hide button when trash is empty</summary>
    </key>

    <key type="u" name="log-level">
      <default>0</default>
      <summary>
          Derive some log4j level/order
          0 - OFF
          1 - ERROR
          2 - WARN
          3 - INFO
          4 - DEBUG
      </summary>
    </key>

  </schema>
</schemalist>